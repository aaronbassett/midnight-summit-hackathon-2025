{
  "name": "rag-mcp",
  "version": "1.0.0",
  "description": "Remote RAG MCP server - Read-only proxy to Chroma Cloud",
  "type": "module",
  "main": "dist/server.js",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "keywords": [
    "mcp",
    "rag",
    "chroma",
    "vector-database",
    "pod"
  ],
  "author": "pod network",
  "license": "MIT",
  "dependencies": {
    "@google/generative-ai": "^0.21.0",
    "@logtape/logtape": "^1.1.2",
    "@modelcontextprotocol/sdk": "^1.21.1",
    "chromadb": "^3.1.2",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "express-rate-limit": "^7.5.0",
    "node-cache": "^5.1.2",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/node": "^24.0.0",
    "dotenv": "^17.2.3",
    "tsx": "^4.19.2",
    "typescript": "^5.9.3",
    "vitest": "^4.0.8"
  },
  "engines": {
    "node": ">=24"
  }
}
